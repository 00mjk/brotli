#!/bin/bash

PREFIX=/usr/local

VERSION=`cat tools/version.h | grep BROTLI_VERSION | grep -o \".*\"`
VERSION=${VERSION:1:${#VERSION}-2}

for i in "$@"
do
 case $i in
  -p=*|--prefix=*)
  PREFIX="${i#*=}"

  ;;
 esac
done

echo -e "prefix=$PREFIX" > ./build/gmake/config.make
echo -e "version=$VERSION" >> ./build/gmake/config.make
